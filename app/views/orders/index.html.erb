<p id="notice"><%= notice %></p>
<% if @orders.count > 0 %>
  <h1>Orders</h1>
  <table style="border-color: blue">
    <thead>
      <tr>
        <th>Products</th>
        <th>User</th>
        <th>Address</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= Product.find(order.product).name %></td>
          <td><%= User.find(order.user_id).full_name %></td>
          <td><%= Address.find(order.address_id).full_address %></td>
          <td><%= order.status %></td>
          <td><%= link_to 'Show', order %></td>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<% else %>
  <h1> No Orders </h1>
<% end %>
