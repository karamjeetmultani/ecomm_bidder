<p id="notice"><%= notice %></p>
<h4><%= current_user.first_name%> <%= current_user.last_name %> Products available for bid</h4>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Barcode</th>
      <th>User</th>
      <th>Bid enable</th>
      <th>Bid status</th>
      <th>Price</th>
      <th>Bid Timer</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @current_user_products.each do |product| %>
      <% user = User.find(product.user_id) %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.barcode %></td>
        <td>
          <%= link_to "#{user.first_name} #{user.last_name}", heaven_show_user_path(:user_id => user.id) %>
        </td>
        <td><%= product.bid_enable %></td>
        <td><%= product.bid_status %></td>
        <td><%= product.price %></td>
        <td>
          <% if(product.bid_timer) %>
            <% timer = (((product.bid_timer - DateTime.now)* 24 * 60 * 60).to_i)/(24*60*60) %>
            <% if(timer.to_i > 0) %>
              <%= timer.to_i %> seconds left
            <% else %>
              <span style="color: red">Sold Out</span>
            <% end %>
          <% else %>
            Nil
          <% end %>
        </td>
        <td><%= link_to 'Show', product %></td>
      </tr>
    <% end %>
  </tbody>
</table>
